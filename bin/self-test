#!/usr/bin/env bash

# ORCA self test script.

set -e

composer install

echo && composer phpcs
echo && composer phpunit
echo && composer phpmd

# Clone an example module into place as a test SUT.
if [ ! -d "../lightning-api" ]; then
  git -C ../ clone --branch 8.x-2.x https://git.drupal.org/project/lightning_api.git --depth 1 -- lightning-api
fi

# Manually clear the Symfony cache. (Don't use the cache:clear command because a
# stale cache could (ironically) prevent it from working.)
if [ -e var/cache/* ]; then
  rm -r var/cache/*
fi

./bin/travis/script drupal/lightning_api

echo && times
