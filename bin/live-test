#!/usr/bin/env bash

# NAME
#     live-test - Test with live packages
#
# SYNOPSIS
#     live-test
#
# DESCRIPTION
#     Performs a live product test with recommended versions of all packages.

set -e

# Executes an ORCA command
function orca {
  COMMAND="${ORCA_ROOT}/bin/orca $@"
  echo "> $COMMAND"
  eval ${COMMAND}
}

ORCA_ROOT="$(cd "$(dirname "$0")/.." && pwd)"
ORCA_JOB=${ORCA_JOB:=ALL}

[[ ${ORCA_LIVE} == "ALL" || ${ORCA_LIVE} = "INTEGRATED_RECOMMENDED" ]] && INTEGRATED_RECOMMENDED=true
[[ ${ORCA_LIVE} == "ALL" || ${ORCA_LIVE} = "INTEGRATED_DEV" ]] && INTEGRATED_DEV=true

[[ -z "$TRAVIS" ]] && SUFFIX="-$(date +%Y-%m-%d_%H-%m-%S)" || SUFFIX=""
export ORCA_FIXTURE_DIR="$(cd ../.. && pwd)/orca-build${SUFFIX}"

# Live test w/ stable packages.
# ------------------------------------------------------------------------------
if [[ ${ORCA_LIVE} = "RECOMMENDED" ]]; then
  orca fixture:init -f
  orca fixture:status
  orca tests:run
fi

# Live test w/ dev packages.
# ------------------------------------------------------------------------------
if [[ ${ORCA_LIVE} = "DEV" ]]; then
  orca fixture:init -f --dev
  orca fixture:status
  orca tests:run --sut=$1
fi
