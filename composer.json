{
    "name": "acquia/orca",
    "description": "An internal tool for testing all of Acquia's product modules together in the context of a realistic, functioning, best practices Drupal build",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Acquia Engineering",
            "homepage": "https://www.acquia.com",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": "^7.1",
        "symfony/console": "^4.1",
        "symfony/flex": "^1.1",
        "symfony/framework-bundle": "^4.1",
        "symfony/yaml": "^4.1"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.5",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.4.4",
        "drupal/coder": "^8.3",
        "geerlingguy/drupal-vm": "^4.9",
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "^6.5",
        "sensiolabs/security-checker": "^5.0",
        "symfony/dotenv": "*",
        "symfony/maker-bundle": "*",
        "symfony/phpunit-bridge": "*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "hooks": {
            "pre-commit": "vendor/bin/phpcs",
            "post-install-cmd": "vendor/bin/cghooks add --ignore-lock",
            "post-update-cmd": "vendor/bin/cghooks update"
        }
    },
    "autoload": {
        "psr-4": {
            "Acquia\\Orca\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Acquia\\Orca\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "security-checker security:check": "script"
        },
        "cghooks": "cghooks --ansi",
        "phpcbf": "phpcbf",
        "phpcs": "phpcs",
        "phpmd": "phpmd bin,src text cleancode,codesize,design,naming,unusedcode",
        "phpunit": "phpunit"
    }
}
